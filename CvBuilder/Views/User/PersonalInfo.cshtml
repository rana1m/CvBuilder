            <a href="javascript:void(0)" class="simple-text logo-normal">
                Creative Tim
            </a>
        </div>
        <ul class="nav">
            <li class="">
                <a href="~/Home/Index">
                    <i class="tim-icons icon-chart-pie-36"></i>
                    <p>Homebage</p>
                </a>
            </li>
            <li class="active">
                <a href="~/User/PesrsonalInfo">
                    <i class="tim-icons icon-single-02"></i>
                    <p>Pesrsonal Info</p>
