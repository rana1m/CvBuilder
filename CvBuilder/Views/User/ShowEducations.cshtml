@model IEnumerable<CvBuilder.Models.Education>

@{
    ViewBag.Title = "ShowEducations";
}

<div class="sidebar">
    <!--
        Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red"
    -->
